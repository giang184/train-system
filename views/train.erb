
<h2>Train Name: <%= @train.name %></h2>

<h3>Destinations:</h3>

  <% if @train.cities.length > 0 %>
    <ul>
      <% @train.cities.each do |city| %>  
        <li><a href="/trains/<%= @train.id %>/cities/<%= city[1].fetch('id') %>"><%= city[0].fetch('name') %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no cities listed for this train yet.</p>
  <% end %>
  <br>

  <h3>Add a destination:</h3>

  <form action="/trains/<%= @train.id %>/cities" method="post">
    <div class="form-group">
      <label for="city_name">City name</label>
      <input id="city_name" name="city_name" class="form-control" type="text">
    </div>
    <button type="submit" class="btn-lg btn-success">Add Destination</button>
  </form>

  <br><br>

  <p><a href="/trains/<%= @train.id %>/edit">Edit train info</a></p>
  <p><a href="/trains">Return to train list</a></p>